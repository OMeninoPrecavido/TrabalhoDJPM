<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity"
    android:background="@color/tomato"
    android:paddingBottom="32dp">

    <ImageView
        android:id="@+id/go_back_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/go_back_image"/>

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="50dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@id/subject"
        app:layout_constraintTop_toTopOf="@id/subject"
        app:layout_constraintBottom_toBottomOf="@id/subject"
        android:src="@drawable/dropdown_arrow_button"
        android:layout_margin="0dp"/>

    <TextView
        android:id="@+id/short_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/long_pause"
        android:text="SHORT PAUSE:"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/long_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/study_time"
        android:text="LONG PAUSE:"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/study_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_delete"
        android:text="STUDY TIME:"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/short_pause_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/short_pause"
        app:layout_constraintTop_toTopOf="@id/short_pause"
        app:layout_constraintBottom_toBottomOf="@id/short_pause"
        android:text="5 min."
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/long_pause_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/long_pause"
        app:layout_constraintTop_toTopOf="@id/long_pause"
        app:layout_constraintBottom_toBottomOf="@id/long_pause"
        android:text="15 min."
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/study_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/study_time"
        app:layout_constraintTop_toTopOf="@id/study_time"
        app:layout_constraintBottom_toBottomOf="@id/study_time"
        android:text="25 min."
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:layout_margin="16dp"/>
    
    <Button
        android:id="@+id/button_delete"
        android:layout_width="256dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="32dp"
        android:backgroundTint="@color/white"
        android:text="DELETE SUBJECT"
        android:textColor="@color/tomato"
        android:textSize="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>