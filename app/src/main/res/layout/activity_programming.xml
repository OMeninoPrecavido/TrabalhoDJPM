<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgrammingActivity"
    android:background="@color/tomato"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCHEDULE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="32dp"
        android:textSize="48dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <View
        android:id="@+id/separator_line"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/separator_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/schedule_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="32dp"
            android:textColor="@color/black"/>

        <View
            android:id="@+id/item_separator_1"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@id/schedule_subject"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/schedule_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MON"
            app:layout_constraintStart_toEndOf="@id/item_separator_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>

        <View
            android:id="@+id/item_separator_2"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@id/schedule_day"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            app:layout_constraintStart_toEndOf="@id/item_separator_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/add_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>